{
	"name": "@markdownrealcode/vsix",
	"version": "0.1.0",
	"private": true,
	"displayName": "Markdown Real Code",
	"description": "Support for .src.md files with source code references",
	"categories": ["Programming Languages"],

	"main": "./dist/extension.js",
	"type": "module",

	"engines": { "vscode": "1.98.0" },
	"activationEvents": ["onLanguage:markdown"],
	"contributes": {
		"languages": [
			{
				"id": "markdownrealcode",
				"aliases": ["Markdown Real Code"],
				"extensions": [".src.md"]
			}
		]
	},

	"scripts": {
		"vscode:prepublish": "bun compile",
		"compile": "bun build extension.ts --outdir dist",
		"dev": "bun build --watch extension.ts --outdir dist",
		"fmt": "biome format .",
		"fmt:fix": "biome format --write .",
		"lint": "biome check .",
		"lint:fix": "biome check --fix ."
	},

	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@types/vscode": "1.98.0",
		"@types/node": "22.13.11",
		"@vscode/vsce": "3.3.0",
		"typescript": "5.8.2",
		"vscode-languageclient": "9.0.1"
	}
}
