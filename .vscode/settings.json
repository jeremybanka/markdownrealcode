{
	"editor.defaultFormatter": "biomejs.biome",
	"editor.formatOnSave": true,
	"[haskell][cabal]": {
		"editor.defaultFormatter": "haskell.haskell",
		"editor.formatOnSave": true
	},
	"vscode-just.formatOnSave": true,
	"cSpell.words": [
		"aeson",
		"exitcode",
		"ghcid",
		"hlint",
		"hspec",
		"markdownrealcode",
		"mdrc",
		"optparse",
		"uncons",
		"unlines"
	],
	"markdownlint.config": {
		"MD010": {
			"code_blocks": false
		}
	},
	"explorer.fileNesting.patterns": {
		"*.src.md": "${capture}.gen.md",
		"repomix.config.json": "repomix-output.xml, .repomixignore"
	}
}
